
<div class="container">
	<div class="row">
		<div class="col s6 right-align">
			<h2>Take a burger!</h2>
			<ul class="burgerItem" id="inBase">
				{{#each name}}
				{{#unless  this.devoured}}
				<li data-id={{this.id}}><h4>{{this.burger_name}}</h4><button class="btn devourBtn">Devour</button></li>
				{{/unless }}
				{{/each}}
			</ul>
		</div>
		<div class="col s6 center-align">
			<h2>Devoured</h2>
			<ul class="burgerItemDevoured">
				{{#each name}}
				{{#if  this.devoured}}
				<li data-id={{this.id}}><h4>{{this.burger_name}}</h4></li>
				{{/if }}
				{{/each}}
			</div>
		</div>
		<div class="row center-align">
			<input type="text" name="nameOfNewBurger" id="nameOfNewBurger">
			<button class="btn" id="bAdd">Add!</button>
		</div>
	</div>
